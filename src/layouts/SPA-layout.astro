---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="https://astro.build/favicon.svg" />
		<link rel="mask-icon" href="https://astro.build/favicon.svg" color="#8D46E7" />
		<meta name="generator" content={Astro.generator + ' (qgp.app)'} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-100">
		<slot />
	</body>
</html>
